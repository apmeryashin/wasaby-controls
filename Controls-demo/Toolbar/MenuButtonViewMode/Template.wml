<div class="controlsDemo__wrapper">
    <div class="controlsDemo__cell">
        <div class="controls-text-label">menuButtonViewMode=toolButton</div>
        <Controls.toolbars:View
                source="{{_buttonsSource}}"
                keyProperty="id"
                menuButtonViewMode="toolButton"
                attr:data-qa="controlsDemo_toolbars_view__tool_button"
        />
    </div>
    <div class="controlsDemo__cell">
        <div class="controls-text-label">menuButtonViewMode=link</div>
        <Controls.toolbars:View
                source="{{_buttonsSource}}"
                on:itemClick="_itemClick()"
                menuButtonViewMode="link"
                attr:data-qa="controlsDemo_toolbars_view__link"
        />
    </div>
</div>

<div class="controlsDemo__wrapper">
    <div class="controlsDemo__cell">
        <div class="controls-text-label">direction=horizontal</div>
        <Controls.toolbars:View
                direction="horizontal"
                source="{{_buttonsSource}}"
                inlineHeight="l"
                keyProperty="id"
                on:itemClick="_itemClick()"
        />
    </div>
    <div class="controlsDemo__cell">
        <div class="controls-text-label">direction=vertical</div>
        <Controls.toolbars:View
                attr:style="margin-left: 12px"
                direction="vertical"
                source="{{_buttonsSource}}"
                inlineHeight="l"
                keyProperty="id"
                on:itemClick="_itemClick()"
        />
    </div>
</div>

<div class="controlsDemo__wrapper controlsDemo_fixedWidth500">
    <div class="wrapper" data-qa="controlsDemo-slider__roundedEdgesFalse">
        <div class="controls-text-label">roundedEdges=false</div>
        <Controls.slider:Base
                attr:class="controlsDemo__class_wide-slider"
                maxValue="{{100}}"
                minValue="{{0}}"/>
    </div>
    <div class="wrapper" data-qa="controlsDemo-slider__roundedEdgesTrue">
        <div class="controls-text-label">roundedEdges=true</div>
        <Controls.slider:Base
                attr:class="controlsDemo__class_wide-slider"
                maxValue="{{100}}"
                minValue="{{0}}"
                roundedEdges="{{true}}"/>
    </div>
</div>
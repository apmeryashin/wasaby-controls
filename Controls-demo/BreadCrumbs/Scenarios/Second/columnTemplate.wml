<ws:partial template="Controls/gridNew:ColumnTemplate"
            attr:class="controls-Grid__row-cell__content_baseline_L"
            itemData="{{itemData}}">
   <ws:contentTemplate>
      <ws:if data="{{!item.isNode()}}">
         <Controls.decorator:Money value="{{item.item[itemData.getDisplayProperty()]}}"
                                   useGrouping="{{true}}"/>
         <span if="{{itemData.getColumnIndex() === 2}}">шт</span>
      </ws:if>
   </ws:contentTemplate>
</ws:partial>

<ws:partial template="Controls/grid:ColumnTemplate"
            attr:class="controls-Grid__row-cell__content_baseline_L"
            scope="{{_options}}">
   <ws:contentTemplate>
      <Controls.decorator:Money value="{{item.contents[column.config.displayProperty]}}"
                                fontColorStyle="{{column.config.displayProperty !== 'sum' ? 'unaccented' : 'default'}}"
                                useGrouping="{{true}}"/>
      <span if="{{!itemData.item.isNode() && item.getColumnIndex() === 1}}">шт</span>
   </ws:contentTemplate>
</ws:partial>

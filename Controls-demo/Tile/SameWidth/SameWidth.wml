                        itemWidth="{{200}}"
                        template="Controls/tileOld:ItemTemplate"
                        hasTitle="{{itemTemplate.itemData.item.isDocument}}"/>
        </ws:itemTemplate>
</Controls.tileOld:View>
</div>

<div class="controlsDemo__wrapper controlDemo_Tile_scale-with-actions">
<Controls.tileOld:View
        attr:class="demo-ScaleOnHover__actions"
        tileMode="dynamic"
        displayProperty="title"
        imageProperty="image"
        keyProperty="id"
        itemActions="{{_itemActions}}"
        tileScalingMode="outside"
        source="{{_viewSource}}">
        <ws:itemTemplate>
                <ws:partial
                        template="Controls/tileOld:ItemTemplate"
                        hasTitle="{{itemTemplate.itemData.item.isDocument}}"/>
        </ws:itemTemplate>
</Controls.tileOld:View>
</div>

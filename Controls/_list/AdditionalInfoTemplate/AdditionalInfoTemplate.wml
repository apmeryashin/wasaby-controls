<ws:template name="INFO_ITEM_TEMPLATE">
    <div class="controls-list_AdditionalInfo-item" title="{{title}}">
        <ws:if data="{{icon}}">
            <Controls.icon:Icon attr:class="controls-list_AdditionalInfo-item_icon"
                                icon="{{icon}}"
                                iconSize="{{iconSize || 's'}}"
                                iconStyle="{{iconStyle || 'label'}}"
            ></Controls.icon:Icon>
        </ws:if>
        <ws:if data="{{caption}}">
            <div class="controls-fontsize-{{fontSize || 's'}} controls-text-{{fontStyle || 'label'}} controls-list_AdditionalInfo-item_caption">{{caption}}</div>
        </ws:if>
    </div>
</ws:template>
<div class="controls-list_AdditionalInfo">
<ws:for data="item in data">
    <ws:partial template="INFO_ITEM_TEMPLATE" scope="{{item}}"/>
</ws:for>
</div>

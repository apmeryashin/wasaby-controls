<ws:if data="{{item.isVisibleCheckbox()}}">
  <ws:template name="multiSelectContent">
      <ws:partial template="{{multiSelectTemplate}}"
                  attr:class="js-controls-ListView__notEditable controls-List_DragNDrop__notDraggable
                             js-controls-ListView__checkbox js-controls-ColumnScroll__notDraggable
                             controls-CheckboxMarker_inList_theme-{{_options.theme}}"
                  triState="{{ triState }}"
                  readOnly="{{ item.isReadonlyCheckbox() || checkboxReadOnly || readOnly }}"
                  value="{{ item.isSelected() }}"
                  on:click="_onCheckBoxClick(item, item.isReadonlyCheckbox() || checkboxReadOnly || readOnly)"/>
  </ws:template>

  <ws:if data="{{multiSelectTemplate}}">
      <ws:partial template="multiSelectContent"
                  multiSelectTemplate="{{multiSelectTemplate}}"/>
  </ws:if>
  <ws:else>
      <Controls.Container.Async templateName="Controls/toggle:CheckboxMarker">
          <ws:partial template="multiSelectContent"
                      multiSelectTemplate="{{content.resolvedTemplate}}"/>
      </Controls.Container.Async>
  </ws:else>
</ws:if>

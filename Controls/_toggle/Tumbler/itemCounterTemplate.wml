<ws:partial template="wml!Controls/_toggle/Tumbler/itemTemplate" item="{{item}}">
    <ws:contentTemplate>
        <ws:partial template="{{contentTemplate.captionTemplate}}"/>
        <ws:if data="{{item.get('mainCounter') || item.get('counter')}}">
            <Controls.heading:Counter class="controls-fontweight-default controls-Tumbler__button-counter"
                                      caption="{{item.get('mainCounter') || item.get('counter')}}"
                                      fontSize="default"
                                      fontColorStyle="{{item.get('mainCounterStyle') || 'primary'}}"/>
        </ws:if>
    </ws:contentTemplate>
</ws:partial>

<Controls._filterPanel.BaseEditor scope="{{_options}}"
                                  on:extendedCaptionClick="_extendedCaptionClickHandler()"
                                  extendedCaption="{{_options.extendedCaption}}">
   <ws:editorTemplate>
       <div class="controls-FilterViewPanel__inputEditor">
           <div class="controls-FilterViewPanel__inputEditor-additionalText">{{_options.additionalText}}</div>
           <Controls.Container.Async templateName="Controls/input:Text">
               <ws:partial template="{{content.resolvedTemplate}}"
                           bind:value="_value"
                           on:valueChanged="_valueChangedHandler()"/>
           </Controls.Container.Async>
       </div>
   </ws:editorTemplate>
</Controls._filterPanel.BaseEditor>

<div on:mousedown="_handleMouseDown()"
     on:mouseenter="_handleMouseEnter()"
     on:mouseleave="_handleMouseLeave()"
     class="controls_operations_theme-{{_options.theme}}
            controls-OperationsButton
            controls-OperationsButton_state_{{_options.readOnly ? 'disabled' : 'enabled'}}
            {{ !_options.newDesign ? 'controls-OperationsButton_separator'}}
            {{ _options.newDesign ? 'icon-SettingsNew' : (_options.useStore ?  _expanded : _options.expanded) ? 'icon-MarkCollapseBold' : 'icon-MarkExpandBold'}}">
</div>

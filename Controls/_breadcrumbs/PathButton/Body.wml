<div class="controls-breadcrumbsMenuButton__menu">
   <!-- Шапка -->
   <div class="controls-breadcrumbsMenuButton__menu-header">
      <!-- На главную -->
      <Controls.buttons:Button
         viewMode="link"
         icon="icon-Home2"
         iconSize="s"
         caption="{[На главную]}"
         on:click="_goToRoot()"
      />

      <!-- Крестик закрытия -->
      <Controls.popupTemplate:CloseButton
         viewMode="linkButton"
         on:click="_onCloseClick()"
      />
   </div>

   <!-- Список -->
   <Controls.scroll:Container attr:class="controls-breadcrumbsMenuButton__menu-body">
      <Controls.treeGrid:View
         name="treeGrid"
         filter="{{_filter}}"
         source="{{_options.source}}"

         keyProperty="{{_options.keyProperty}}"
         nodeProperty="{{_options.nodeProperty}}"
         parentProperty="{{_options.parentProperty}}"

         expanderIcon="hiddenNode"
         expanderVisibility="hasChildren"

         bind:markedKey="_markedKey"
         bind:expandedItems="_expandedItems"

         on:itemClick="_onItemClick()"
      >
         <ws:columns>
            <ws:Array>
               <ws:Object displayProperty="{{_options.displayProperty}}"/>
            </ws:Array>
         </ws:columns>
      </Controls.treeGrid:View>
   </Controls.scroll:Container>
</div>

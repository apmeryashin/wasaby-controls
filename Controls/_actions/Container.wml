<Controls.Container.Async
    templateName="Controls/toolbars:View">
    <ws:content>
        <ws:partial template="{{content.resolvedTemplate}}"
                    name="toolbar"
                    scope="{{_options.toolbarOptions}}"
                    items="{{_toolbarItems}}"
                    menuSource="{{_menuSource}}"
                    keyProperty="id"
                    parentProperty="parent"
                    itemTemplateProperty="template"
                    nodeProperty="parent@"
                    menuDraggable="{{true}}"
                    closeMenuOnOutsideClick="{{false}}"
                    on:menuOpened="_toolbarMenuOpened()"
                    on:menuClosed="_toolbarMenuClosed()"
                    on:beforeMenuOpen="_beforeMenuOpen()"
                    on:itemClick="_toolbarItemClick()"
        />
    </ws:content>
</Controls.Container.Async>


{
   "extends": "./tslint.json",
   "linterOptions": {
      "exclude": [
         "application/**/*.*",
         "build-ui/**/*.*",
         "node_modules/**/*.*"
      ]
   },
   "rules": {
      "no-shadowed-variable": false,
      "no-parameter-reassignment": false,
      "no-magic-numbers": false,

      "ban-types": false,
      "ban-ts-ignore": false,
      "no-any": false,
      "typedef": false
   }
}

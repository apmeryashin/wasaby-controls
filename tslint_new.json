{
   "extends": "./tslint.json",
   "linterOptions": {
      "exclude": [
         "application/**/*.*",
         "build-ui/**/*.*",
         "node_modules/**/*.*"
      ]
   },
   "rules": {
      "no-bitwise": false,
      "triple-equals": false,
      "no-unused-expression": false,
      "no-conditional-assignment": false,
      "prefer-const": false,
      "no-parameter-reassignment": false,
      "max-line-length": false,
      "ban-ts-ignore": false,
      "no-shadowed-variable": false,
      "only-arrow-functions": false,
      "variable-name": false,
      "no-magic-numbers": false,
      "one-variable-per-declaration": false,
      "jsdoc-format": false,
      "no-empty": false,
      "no-this-assignment": false,
      "no-console": false,
      "ban-types": false,
      "no-any": false,
      "typedef": false
   }
}

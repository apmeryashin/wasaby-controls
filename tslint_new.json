{
   "extends": "./tslint.json",
   "linterOptions": {
      "exclude": [
         "application/**/*.*",
         "build-ui/**/*.*",
         "node_modules/**/*.*"
      ]
   },
   "rules": {
      "triple-equals": false,
      "no-console": false,

      "no-conditional-assignment": false,
      "no-this-assignment": false,
      "no-shadowed-variable": false,
      "no-parameter-reassignment": false,
      "ban-ts-ignore": false,
      "no-magic-numbers": false,
      "ban-types": false,
      "no-any": false,
      "typedef": false
   }
}
